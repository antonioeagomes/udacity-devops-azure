{
    "variables": {
        "client_id": "{{env `ARM_CLIENT_ID`}}",
        "client_secret": "{{env `ARM_CLIENT_SECRET`}}",
        "subscription_id": "{{env `ARM_SUBSCRIPTION_ID`}}",
        "tenant_id": "{{env `ARM_TENANT_ID`}}"
    },
    "builders": [
        {
            "type": "azure-arm",

            "client_id": "{{user `client_id`}}",
            "client_secret": "{{user `client_secret`}}",
            "tenant_id": "{{user `ARM_TENANT_ID`}}",
            "subscription_id": "{{user `subscription_id`}}",

            "managed_image_resource_group_name": "udacity-devops-rg",
            "managed_image_name": "udacity-ubuntu-1804",

            "os_type": "Linux",
            "image_publisher": "Canonical",
            "image_offer": "UbuntuServer",
            "image_sku": "18.04-LTS",
            "image_version": "latest",

            "location": "West Europe",
            "vm_size": "Standard_B1s",

            "azure_tags": {
                "env": "prod"
            }
        }
    ],
    "provisioners": [{
    "inline": [
        "apt-get update",
        "apt-get install -y busybox",
        "mkdir -p /var/www/html",
        "chown www-data:www-data /var/www/html",
        "echo 'Hello, World!' > /var/www/html/index.html",
        "nohup busybox httpd -f -p 80 -h /var/www/html &",
        "echo '[Unit]\\nDescription=Busybox HTTP Server\\nAfter=network.target\\n[Service]\\nExecStart=/usr/bin/busybox httpd -f -p 80 -h /var/www/html\\nRestart=always\\n[Install]\\nWantedBy=multi-user.target' > /etc/systemd/system/busybox-httpd.service",
        "systemctl daemon-reload",
        "systemctl enable busybox-httpd.service",
        "systemctl start busybox-httpd.service"
    ],
    "type": "shell",
    "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} {{ .Path }}"
}]
}